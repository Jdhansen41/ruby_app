<%= form_for(@article, html: {multipart: true}) do |f| %> <!--Multipart data is now accepted, this will handle the images-->
    <ul>
        <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
    </ul>
    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %><br />
        <%= f.text_area :body %>
    </p>
    <p>
        <% if @article.image.exists? %> <!--If an image file is already attached, show it -->
            <%= image_tag @article.image.url(:medium) %><br /> <!--passing medium image size from article model where image styles are-->
        <% end %>
        <%= f.label :image, "Attach a New Image" %><br />
        <%= f.file_field :image %>
    </p>
    <p>
        <%= f.label :tag_list %><br />
        <%= f.text_field :tag_list %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    <% end %>