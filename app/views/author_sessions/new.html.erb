<div class="heading">
    <h1>Login</h1>    
</div>

<div class="mainSection">
    <%= form_tag author_sessions_path, method: :post do%>
    
        <%= label_tag :email %>
        <%= text_field_tag :email %>
        <br />
    
    
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <br />
    <div class="actions">
        <%= submit_tag "Login", class: "submit" %>
    </div>
    <% end %>
    
<%= link_to 'Back', articles_path %>    
</div>
